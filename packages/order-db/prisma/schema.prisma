generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

// Composite type for the product array
type OrderProduct {
  name     String
  quantity Int
  price    Float
}

model Order {
  id        String         @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  email     String
  amount    Float
  status    String
  products  OrderProduct[]
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
}
